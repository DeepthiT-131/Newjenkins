    .contentsection{
        border:2px solid #1d1d85;
        border-radius: 8px;
      
    }
    
    .contentwithscroll{
        overflow-y: scroll;
        height: 550px;
    }
    ::-webkit-scrollbar
    {
      width: 12px;  /* for vertical scrollbars */
      border-radius: 10px;
    }
    
    ::-webkit-scrollbar-track
    {
      background: rgba(0, 0, 0, 0.1);
      border-radius: 10px;
    }
    
    ::-webkit-scrollbar-thumb
    {
        border-radius: 10px;
      background: rgba(0, 0, 0, 0.4);
    }
    .images{
        margin-right: 40px;
    }
    .leftpanelmenu{
        color:white;
    }
    .innercontainer{
        text-align: center;
        background: var(--PrimaryBgColor);
        color: var(--PrimaryTextColor);
        border-top-left-radius: 6px;
        border-top-right-radius: 6px;
    }
    .listview{
        border: 1px solid var(--SecondaryBgColor);
        padding: 5px;
        margin-bottom: 5px;
        border-radius: 8px;
    }
    
    .containerbody{
        border: 1px solid #3c3a3c;
    border-bottom-left-radius: 8px;
    border-bottom-right-radius: 8px;
    min-height: 300px;
    background: white;
    }
 

     .text{

.label{
    margin-top: .5rem;
    }
    .border{
        border:1px solid gray !important;
    }
    .main{
        padding-left: 1%;
        padding-right: 1%;
    }
    .drop-container {
        min-height:2em;
        border: 2px dotted #1d1d85;
        padding:1em;
        margin-bottom: 2%;
        padding-right: 20px;
        padding-left: 20px;
      }
    
      .align{
          padding-left: 17px;
      }
    .horizontal
    {
        display: inline-flex;
        padding-left: 16px;
    }
    .vertical
    {
        display: block;
    }
   
    .fa.pull-left{
        padding-right: 9px;    
    }
    .contentsection{
        border:2px solid #1d1d85;
        border-radius: 8px;
      
    }
    
    .contentwithscroll{
        overflow-y: scroll;
        height: 550px;
    }
    ::-webkit-scrollbar
    {
      width: 12px;  /* for vertical scrollbars */
      border-radius: 10px;
    }
    
    ::-webkit-scrollbar-track
    {
      background: rgba(0, 0, 0, 0.1);
      border-radius: 10px;
    }
    
    ::-webkit-scrollbar-thumb
    {
        border-radius: 10px;
      background: rgba(0, 0, 0, 0.4);
    }
    .images{
        margin-right: 6px;
    }
    .leftpanelmenu{
        color:white;
    }
    .functions{
        font-weight: 700;
    }
    input[type="radio"] {
        margin-left: 20px;
        margin-right: 3px;
    }

    
    
    
    
    
    
    
    
    